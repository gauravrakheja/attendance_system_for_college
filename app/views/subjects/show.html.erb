<%- model_class = Subject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<h2><%= Date.today %></h2>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @subject.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:subject_code) %>:</strong></dt>
  <dd><%= @subject.subject_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:course) %>:</strong></dt>
  <dd><%= @subject.course %></dd>
</dl>
<table class="table table-stripped">
  <tr>
    <th>Name</th>
    <th>Roll Number</th>
    <th>Phone</th>
    <th>Course</th>
    <th>Year</th>
    <th>Absent?</th>
  </tr>
    <% @students.each do |student| %>
      <tr>
      <td><%= student.name %></td>
      <td><%= student.roll_number %></td>
      <td><%= student.phone %></td>
      <td><%= student.course %></td>
      <td><%= student.year %></td>
      <td><%= render '/attends/form', subject: @subject, student: student %></td>
      </tr>
    <% end %>
</table>
<br/>
<%= link_to t('.back', :default => t("helpers.links.back")),
              subjects_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_subject_path(@subject), :class => 'btn btn-default' %>
