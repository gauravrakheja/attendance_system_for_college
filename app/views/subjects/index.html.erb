<%- model_class = Subject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
    <% @subjects.each do |subject| %>

      <div class="demo-card-square mdl-card mdl-shadow--2dp col-lg-4">
        <div class="mdl-card__title mdl-card--expand">
          <h2 class="mdl-card__title-text"><%= subject.name %></h2>
        </div>
        <div class="mdl-card__supporting-text">

        </div>
        <div class="mdl-card__actions mdl-card--border">
          <%= link_to "Attendance", subject_path(subject), class: 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
          <%= link_to "Edit Subject",
                      edit_subject_path(subject), :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
        </div>
      </div>
         
    <% end %>
<div class="demo-card-square mdl-card mdl-shadow--2dp col-lg-4">
  <div class="mdl-card__title mdl-card--expand">
    <h2 class="mdl-card__title-text">Add Subject</h2>
  </div>
  <div class="mdl-card__supporting-text">

  </div>
  <div class="mdl-card__actions mdl-card--border">
    <%= link_to "Add",
                new_subject_path,
                :class => 'mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect' %>
  </div>
</div>