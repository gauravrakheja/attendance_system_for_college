<%- model_class = Subject -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:subject_code) %></th>
      <th><%= model_class.human_attribute_name(:course) %></th>
      <th>Number Of Student</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= link_to subject.id, subject_path(subject) %></td>
        <td><%= subject.name %></td>
        <td><%= subject.subject_code %></td>
        <td><%= subject.course %></td>
        <td><%= subject.students.count %>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      subject_path(subject), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_subject_path(subject), :class => 'btn btn-default btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Subject",
            new_subject_path,
            :class => 'btn btn-default' %>
